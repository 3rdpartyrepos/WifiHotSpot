<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fitc.com.wifihotspot" >

    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <service
            android:name=".HotSpotService"
            android:enabled="true"
            android:exported="true"></service>

        <activity
            android:name=".TestMeActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_fullscreen"
            android:theme="@style/FullscreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver
            android:name=".HotSpotIntentReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="@string/intent_action_turnon" />
                <action android:name="@string/intent_action_turnoff" />

                <category android:name="android.intent.category.BROWSABLE" />
                <category android:name="android.intent.category.DEFAULT" />

                <action android:name="android.intent.action.VIEW" />

                <data android:scheme="@string/intent_data_scheme" />
            </intent-filter>
        </receiver>

        <activity android:name=".MagicActivity" android:theme="@style/Theme.Transparent">
            <intent-filter>
                <action android:name="@string/intent_action_turnon" />
                <action android:name="@string/intent_action_turnoff" />

                <category android:name="android.intent.category.BROWSABLE" />
                <category android:name="android.intent.category.DEFAULT" />

                <action android:name="android.intent.action.VIEW" />

                <data android:scheme="@string/intent_data_scheme" />
            </intent-filter>
        </activity>
    </application>

</manifest>